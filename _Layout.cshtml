<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JoceApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JoceApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
@*         <div class="container-fluid">
            <div class="row">
				<div class="col-md-12">
					<div class="jumbotron">
						<h1 class="display-4">Welcome to JoceApp!</h1>
						<p class="lead">This
                    </div>
                </div>
            </div>
        </div>
 *@
        <!-- creates navigation bar with some classes from bootstrap -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 imageNavBar">
            <!-- container class used to center and horizontally pad the content within a fixed-width container -->
            <div class="container">
                <!-- 
                    **This is a hyperlink (<a>) styled as a navbar brand, which typically represents the main 
                            logo or branding of the website. 
                    **The asp-area and asp-page attributes are ASP.NET Core tag helpers used for generating URLs 
                            based on routing conventions.
                    **In this case, it links to the Index page (/Index) of the website.
                -->
                <a class="navbar-brand" asp-area="" asp-page="/Index">
					<img src="~/pics/sun.jpg" alt="Logo" class="logo"/>
                    <!-- <div style="width:100%;height:0;padding-bottom:100%;position:relative;"><iframe src="https://giphy.com/embed/2A75RyXVzzSI2bx4Gj" width="100%" height="100%" style="position:absolute" frameBorder="0" class="giphy-embed" allowFullScreen></iframe></div><p><a href="https://giphy.com/gifs/hallmarkecards-cute-hallmark-shoebox-2A75RyXVzzSI2bx4Gj"></a></p> -->
                </a>
                <!-- 
					**This is a button styled as a navbar toggler, which is used to toggle the visibility of the 
							navigation links on small screens. Makes the nav bar into the 3 little lines button
					**The data-bs-toggle attribute is a Bootstrap attribute that specifies the type of toggle 
							action to be performed.
					**The data-bs-target attribute specifies the target element to be toggled.
                    **The aria-controls, aria-expanded, and aria-label attributes are used for accessibility.
                -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- It collapses on smaller screens and expands on larger screens -->
                <div class="nav-pills navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Resume">Resume</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/CoverLetter">CoverLetter</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Toolbox">SPE Teacher Toolbox</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Experience">Preschool Practicum Experience</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - JoceApp -
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>